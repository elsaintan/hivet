<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".KonsultasiActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/kotakan1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/kotak_profil_kecil">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/profileIM"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="14dp"
                android:layout_marginBottom="24dp"
                android:src="@drawable/profile" />

            <TextView
                android:id="@+id/namadrhTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="24dp"
                android:layout_toRightOf="@id/profileIM"
                android:fontFamily="@font/roboto_bold"
                android:text="Name" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/userRL"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/kotak_profil_kecil">

            <TextView
                android:id="@+id/label_pengalaman"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:text="Pengalaman : "
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/exp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_toRightOf="@id/label_pengalaman"
                android:text=" Pengalaman : "
                android:textSize="16sp" />

            <TextView
                android:id="@+id/label_str"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/label_pengalaman"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:text="No STR : "
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/exp"
                android:layout_marginTop="16dp"
                android:layout_toRightOf="@id/label_str"
                android:text="No STR : "
                android:textSize="16sp" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/kotak_profil_kecil">

            <TextView
                android:id="@+id/text_peliharaan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="15dp"
                android:text="Peliharaan"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/peliharaanSP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_peliharaan"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="16dp"
                android:text="Pilih Hewan Peliharaanku" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/mypetsRL"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="30dp"
            android:background="@color/biru_lebih_keren">

            <TextView
                android:id="@+id/text_total_harga"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/roboto_bold"
                android:text="Total Biaya" />

            <View
                android:id="@+id/divider3"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@id/text_total_harga"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="16dp"
                android:background="?android:attr/listDivider"
                android:backgroundTint="@color/black"
                android:backgroundTintMode="src_over" />

            <TextView
                android:id="@+id/text_harga"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/divider3"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/roboto_bold"
                android:text="Harga :" />

            <TextView
                android:id="@+id/hargaTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_harga"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:text="Total Biaya" />

            <TextView
                android:id="@+id/text_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/hargaTV"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/roboto_bold"
                android:text="Total Harga :" />

            <TextView
                android:id="@+id/workExpTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_total"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:text="Harga Total" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/menuRL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp">

            <Button
                android:id="@+id/konsulBT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="30dp"
                android:backgroundTint="@color/green_lumut"
                android:text="Konsultasi" />

        </RelativeLayout>

    </LinearLayout>


</ScrollView>