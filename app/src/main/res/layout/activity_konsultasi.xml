<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/biru_lebih_keren"
    tools:context=".KonsultasiActivity">

    <RelativeLayout
        android:id="@+id/profilRL"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/kotak_profil_kecil">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/profileIM"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:src="@drawable/profile" />

        <TextView
            android:id="@+id/namadrhTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@id/profileIM"
            android:text="Name" />

        <View
            android:id="@+id/divider3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/namadrhTV"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:layout_toRightOf="@id/profileIM"
            android:background="?android:attr/listDivider"
            android:backgroundTint="@color/black"
            android:backgroundTintMode="src_over" />

        <TextView
            android:id="@+id/tempat_praktik"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/divider3"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:layout_toRightOf="@id/profileIM"
            android:text="Tempat Praktik" />

        <TextView
            android:id="@+id/exp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tempat_praktik"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:layout_toRightOf="@id/profileIM"
            android:text="Pengalaman" />

        <TextView
            android:id="@+id/no_str"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/exp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:layout_toRightOf="@id/profileIM"
            android:text="No STR" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/mypetsRL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/profilRL"
        android:layout_marginStart="30dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/kotak_profil_kecil">

        <Spinner
            android:id="@+id/peliharaanSP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:text="Pilih Hewan Peliharaanku" />

        <TextView
            android:id="@+id/workExpTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/peliharaanSP"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="8dp"
            android:text="Harga Total" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/totalbiayaRL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/mypetsRL"
        android:layout_marginStart="30dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/kotak_profil_kecil">

        <TextView
            android:id="@+id/text_total_biaya"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="8dp"
            android:text="Total Biaya" />

        <TextView
            android:id="@+id/hargaTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/divider2"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:text="Total Biaya" />

        <View
            android:id="@+id/divider2"
            android:layout_width="180dp"
            android:layout_height="1dp"
            android:layout_below="@id/text_total_biaya"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:background="?android:attr/listDivider"
            android:backgroundTint="@color/black"
            android:backgroundTintMode="src_over" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/menuRL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/totalbiayaRL"
        android:layout_marginTop="30dp">

        <Button
            android:id="@+id/konsulBT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="30dp"
            android:backgroundTint="@color/green_lumut"
            android:text="Konsultasi" />

    </RelativeLayout>


</RelativeLayout>