<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/biru_lebih_keren"
    tools:context=".FilterBookingActivity">

    <Spinner
        android:id="@+id/daerahS"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/background_input_field"
        tools:layout_editor_absoluteX="1dp"
        android:padding="16dp"
        tools:layout_editor_absoluteY="134dp" />

    <EditText
        android:id="@+id/tanggal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/daerahS"
        android:layout_marginTop="27dp"
        android:background="@drawable/background_input_field"
        android:ems="10"
        android:padding="16dp"
        android:text="Pilih Tanggal"
        tools:layout_editor_absoluteX="82dp"
        tools:layout_editor_absoluteY="187dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tanggal"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:text="Selanjutnya"
        android:backgroundTint="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/biru_keren"
        android:fontFamily="@font/roboto_bold"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="267dp" />
</RelativeLayout>